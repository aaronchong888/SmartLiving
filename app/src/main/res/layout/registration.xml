<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_layout"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reg_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_face"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/reg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:text="Create Profile"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/reg_icon"
                android:layout_toEndOf="@+id/reg_icon" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_submit"
                />

            <TextView
                android:id="@+id/name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/name_icon"
                android:textSize="16dp"
                android:text="Name : \t"/>

            <EditText
                android:id="@+id/reg_name_text"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/name_title"
                android:textSize="14sp"
                android:maxLength="50"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:inputType="textCapSentences|textNoSuggestions"
                android:textColor="@android:color/black"
                android:background="@drawable/back"
                android:textColorHint="@android:color/darker_gray"
                android:dropDownWidth="320dp"
                android:dropDownVerticalOffset="3dp"
                android:hint="( Enter your name )"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_submit"
                />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/email_icon"
                android:textSize="16dp"
                android:text="Email : \t\t"/>

            <EditText
                android:id="@+id/reg_email_text"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/email_title"
                android:textSize="14sp"
                android:maxLength="50"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:inputType="textCapSentences|textNoSuggestions"
                android:textColor="@android:color/black"
                android:background="@drawable/back"
                android:textColorHint="@android:color/darker_gray"
                android:dropDownWidth="320dp"
                android:dropDownVerticalOffset="3dp"
                android:hint="( Enter your email )"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/dob_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_submit"
                />

            <TextView
                android:id="@+id/dob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/dob_icon"
                android:textSize="16dp"
                android:text="Date of Birth : \t\t"/>

            <TextView
                android:id="@+id/reg_dob_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/dob_title"
                android:textSize="16dp"
                android:text="01 / 01 / 1996"/>

            <Button
                android:id="@+id/reg_dob_edit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/ic_mode_edit"
                android:gravity="center" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ill_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_submit"
                />

            <TextView
                android:id="@+id/ill_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/ill_icon"
                android:textSize="16dp"
                android:text="Illnesses : \t\t"/>

            <TextView
                android:id="@+id/ill_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/ill_title"
                android:textSize="16dp"
                android:text="Heart-related"/>

            <CheckBox
                android:id="@+id/reg_ill_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center" />

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp">

            <ImageView
                android:id="@+id/ill2_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_submit"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/ill2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/ill2_icon"
                android:textSize="16dp"
                android:text="Illnesses : \t\t"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/ill2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/ill2_title"
                android:textSize="16dp"
                android:text="Respiratory-related"/>

            <CheckBox
                android:id="@+id/reg_ill2_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/reg_agree_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/reg_agree_text"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reg_agree_edit"
                android:textSize="12sp"
                android:text="I have read and agree to the Privacy Policy. I have read and agree to the Privacy Policy"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:id="@+id/reg_confirm" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>